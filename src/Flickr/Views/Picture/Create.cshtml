@model Flickr.Models.Picture

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<form method="post" asp-action="Create" asp-controller="Picture" enctype="multipart/form-data">
    <input type="file" name="img" multiple  id="img" />
    <input type="submit" value="Upload" class="btn btn-default" />
</form>
